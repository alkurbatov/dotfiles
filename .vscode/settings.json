// Purprose:
// Tweak vscode

// Put this file to
// "~/Library/Application Support/Code/User/settings.json"
// folder in order to apply tweaks.

{
	"breadcrumbs.enabled": true,

	"editor.autoIndent": true,

	"editor.cursorStyle": "block",

	"editor.detectIndentation": true,

	// https://github.com/tonsky/FiraCode
	"editor.fontFamily": "Fira Code",
	//"editor.fontFamily": "Monaco",

	"editor.fontLigatures": true,

	"editor.fontSize": 15,

	"editor.formatOnPaste": false,

	"editor.formatOnSave": false,

	"editor.lineNumbers": "on",

	"editor.minimap.enabled": false,

	"explorer.confirmDelete": false,

	"explorer.openEditors.visible": 0,

	"explorer.confirmDragAndDrop": false,

	"editor.renderWhitespace": "all",

	"editor.wordWrap": "on",

	"files.autoSave": "afterDelay",

	"problems.decorations.enabled": false,

	"terminal.integrated.shell.osx": "/bin/zsh",

	// Disable statistics reporting.
	"telemetry.enableTelemetry": false,

	"telemetry.enableCrashReporter": false,

	"workbench.colorTheme": "Solarized Light",

	"workbench.fontAliasing": "auto",

	"workbench.iconTheme": "vscode-icons",

	"workbench.settings.editor": "json",

	"workbench.statusBar.feedback.visible": false,

	"window.title": "${activeEditorMedium}",

	"window.zoomLevel": 0,

	//-------- Files configuration --------

	// Configure glob patterns for excluding files and folders.
	"files.exclude": {
		"**/CMakeFiles": true,
		"**/CMakeCache.txt": true,
		"**/cmake_install.cmake": true,
		"**/.idea": true,
		"**/.git": true,
		"**/.mypy_cache": true,
		"**/.DS_Store": true,
		"**/*.svn": true,
		"**/*.swp": true,
		"**/*.pyc": true,
		"**/*.pyo": true,
		"**/*.so": true,
		"**/__pycache__": true,
		"**/coverage": true
	},

	//-------- Plugins configuration --------

	// Enable C++ linter
	"C_Cpp.intelliSenseEngine": "Default",

	// Hide Project Manager from the left panel
	"projectManager.treeview.visible": false,

	"projectManager.showProjectNameInStatusBar": false,

	// Python specific
	"python.pythonPath": "/opt/local/bin/python2.7",

	"python.linting.pylintUseMinimalCheckers": false,
}
