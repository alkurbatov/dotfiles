# Purprose:
# Aliases for zsh.
# For a full list of active aliases, run `alias`.

# Global aliases
alias -g G='|grep'
alias -g M='|more'
alias -g N='2>/dev/null'
alias -g J='-H "Content-Type: application/json"'
alias -g S='-w "\n%{http_code}\n"'
if [[ "$OSTYPE" = darwin* ]]; then
    alias -g CB='| pbcopy'
fi

# Tools
alias df='df -h'
alias du='du -h'
alias mkdir='mkdir -pv'
alias reload-bash='source ~/.bashrc'
alias reload-zsh='source ~/.zshrc'
alias rmr='rm -rf'
alias show-path='echo $PATH | tr -s ":" "\n"'

if (( $+commands[exa] )); then
    alias ls='exa -abghl --group-directories-first --git --color=automatic'
fi

if [[ "$OSTYPE" = darwin* ]]; then
    alias cat='bat --theme=Nord'
    alias github='open https://github.com/alkurbatov'
    alias grep='grep --color=always'
    alias myip="ipconfig getifaddr en0"
else
    alias apt-cache='sudo apt-cache'
    alias apt-get='sudo apt-get'
    alias apt-update='sudo apt-get update && sudo apt-get upgrade'
    alias cat='batcat --theme=Nord'
    alias dnf='sudo dnf'
    alias gdb='gdb --silent'
    alias grep='grep --color=always'
    alias ipconfig='ifconfig'
    alias ips='ip -c -br address show'
    alias ipt-list='iptables -vL --line-numbers'
    alias ipt-watch='watch -n 2 -d iptables -nvL'
    alias lh='ls -lhS --color=auto'
    alias ls='ls --color=auto'
    alias lscpu='lscpu -e'
    alias meminfo='free -h -l'
    alias mount='sudo mount | column -t'
    alias ports='netstat -tulanp'
    alias poweroff='sudo poweroff'
    alias routes='ip -c -br route show'
    alias reboot='sudo reboot'
    alias shutdown='sudo /sbin/shutdown'
    alias systemctl='sudo systemctl'
    alias tree='tree -h'
    alias umount='sudo umount'
    alias update-grub='grub2-mkconfig -o "$(readlink -e /etc/grub2.cfg)"'
    alias yum='sudo yum'
fi

# Common aliases
alias cls='clear'
alias emacs='emacs -nw'
alias hosts='cat /etc/hosts'
alias wget='wget -c'

# NPM aliases
alias na='npm audit'
alias ni='npm install --save'
alias nid='npm install --save-dev'
alias npm-reinstall='rm -rf node_modules && npm install'
alias npm-update='sudo npm install -g npm'

# Jest aliases
alias ji='node_modules/.bin/jest -i'
alias jt='node_modules/.bin/jest -t'
alias jdb='node --inspect-brk node_modules/.bin/jest --runInBand'

# Git aliases
alias ga='git add'
alias gaa='git add .'
alias gam='git am --3way --ignore-space-change'
alias gb='git branch'
alias gbd='git branch -D'
alias gc='git commit -v --signoff'
alias gco='git checkout'
alias gca='git commit -v --amend'
alias gcan='git commit --amend --no-edit'
alias gcad='git commit --amend --date="$(date -R)" --no-edit'
alias gcp='git cherry-pick'
alias gcpx='git cherry-pick -x'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='git pull'
alias glg='git log --color --graph --oneline --abbrev-commit --decorate --abbrev=8 --date=format-local:"%d-%m-%Y %H:%M:%S" --pretty=format:"%C(cyan)%h %C(yellow)%ad %C(bold green)%d %C(reset)%s <%C(bold blue)%an>"'
alias glm='git log --no-merges --author "Kurbatov Alexander" --oneline'
alias gp='git push'
alias gpf='git push --force'
alias gpo='git push -u origin'
alias gr='git rebase -i'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias gs='git status -sb'
alias gst='git stash'
alias gstl='git stash list'
alias gstp='git stash pop'
alias gsts='git stash show -p'

# Docker
alias di='docker images'
alias dps='docker ps'
alias dri='docker rmi'
alias dr='docker run --rm -it --entrypoint /bin/bash'
alias hadolint='hadolint -c ~/.hadolint.yaml'

# Kubernetes (OpenShift)
alias ocl='oc login --username="a.kurbatov"'

# Python aliases
alias activate='. ./.venv/bin/activate'
