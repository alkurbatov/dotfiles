# Purprose:
# Change default active version of Python.

for i in python pip virtualenv tox pylint; do
    sudo port select --set ${i} ${i}${1}
done

for i in pep8 autopep8 flake8 pycodestyle pyflakes; do
    sudo port select --set ${i} ${i}-${1}
done

