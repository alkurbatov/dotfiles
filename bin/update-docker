# Purprose:
# Update Docker Containers using Kolla Ansible.

# NOTE (alkurbatov): Don't forget to accept all the ssh keys including
# the master-to-master login.

UPDATES_INFO=/usr/libexec/vstorage-ui-backend/var/updates_info

yum clean all
yum update -y openstack-kolla kolla-ansible
if [ $? -ne 0 ]; then
    exit 1
fi

kolla-ansible update -e update_action=check
if [ $? -ne 0 ]; then
    exit 1
fi

if [ ! -f "$UPDATES_INFO" ]; then
    echo "Updates not found!"
    exit 0
fi

echo "Updates found for:"
cat "${UPDATES_INFO}" | jq

read -p "Are you sure (y/n)? " -n 1 -r
echo

if [[ ! ${REPLY} =~ ^[Yy]$ ]]
then
    echo "Aborting"
    exit 0
fi

kolla-ansible update -e update_action=upgrade
