# Purprose:
# Prepare fresh system for work.

set -euxo pipefail

# Install Homebrew, see
# https://docs.brew.sh/Installation
bash <(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)

# Emacs
brew install --cask emacs
brew install aspell
brew install multimarkdown
brew install coreutils

# C++
brew install clang-format
brew install cmake
brew install cppcheck
brew install fmt
brew install doxygen
brew install openssl

# Python
brew install python@3.11
ln -s /usr/local/bin/python3 /usr/local/bin/python
brew install black
brew install isort
brew install poetry

# Pylsp
python -m pip install python-lsp-server
python -m pip install pylsp-mypy
python -m pip install pylsp-rope

# Go
brew install go
go install golang.org/x/tools/gopls@latest

# Java
brew install java
sudo ln -sfn /usr/local/opt/openjdk/libexec/openjdk.jdk /Library/Java/JavaVirtualMachines/openjdk.jdk

# JavaScript
brew install node@16
brew link node@16
brew install deno
brew install jq

# Docker
brew install hadolint

# Scripting
brew install shellcheck

# Administration
brew install ansible
brew install ansible-lint
brew install coreutils
brew install inetutils
brew install mc

# Utilities
brew install --cask xquartz
brew install ag
brew install fd
brew install ffmpegthumbnailer
brew install gnu-tar
brew install gpg
brew install imagemagick
brew install mediainfo
brew install pinentry-mac
brew install poppler
brew install rar
brew install tmux
brew install unzip
brew install wget
brew install xauth
brew install youtube-dl

# Tell pinentry to ask gpg keys password using terminal, not gui
echo "pinentry-program /usr/local/bin/pinentry-mac" > ~/.gnupg/gpg-agent.conf

# Setup the default layout.
mkdir -p ~/work/{bin,etc,pkg,src/sandbox,tmp}
mkdir -p ~/work/src/github.com/alkurbatov
mkdir -p ~/work/src/git.mts.ai/alkurbatov

# Precreate SSH folders.
mkdir -p  ~/.ssh/controlmasters

# Copy settings from my dotfiles.
cp ~/work/src/github.com/alkurbatov/dotfiles/.zsh* ~/
cp -r ~/work/src/github.com/alkurbatov/dotfiles/.config ~/
cp -r ~/work/src/github.com/alkurbatov/dotfiles/.emacs* ~/
cp ~/work/src/github.com/alkurbatov/dotfiles/.tmux.conf ~/
cp ~/work/src/github.com/alkurbatov/dotfiles/git/.gitconfig ~/

# Install ZSH plugins.
git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ~/.zsh/zsh-you-should-use
git clone git@github.com:zsh-users/zsh-syntax-highlighting.git ~/.zsh/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-autosuggestions ~/.zsh/zsh-autosuggestions

# Tweak Finder
defaults write com.apple.Finder AppleShowAllFiles -bool true
defaults write com.apple.Finder _FXShowPosixPathInTitle -bool true
defaults write com.apple.Finder ShowStatusBar -bool true
defaults write com.apple.finder NewWindowTarget -string "PfHm"
defaults write com.apple.Finder NewWindowTargetPath -string "file:///Users/alkurbatov/"
killall Finder

# Make it possible to repeat the same keypress many times by holding it down.
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false
