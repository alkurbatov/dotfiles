# Purprose:
# conky configuration.

# set to yes if you want Conky to be forked in the background
background no

use_xft yes
xftfont Sans:size=10

# Text alpha when using Xft
xftalpha 0.8

# Update interval in seconds
update_interval 2.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Create own window instead of using desktop
own_window no
own_window_transparent yes
own_window_argb_visual true
own_window_argb_value 0
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 280 500
maximum_width 300

draw_shades yes

draw_outline no

draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
default_outline_color white
alignment top_left
gap_x 5
gap_y 34

# Subtract file system buffers from used memory?
no_buffers yes

uppercase no
cpu_avg_samples 4
override_utf8_locale no

TEXT
${font sans-serif:bold:size=10}SYSTEM ${hr 2}
${font sans-serif:normal:size=10}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${font sans-serif:bold:size=10}PROCESSORS ${hr 2}
${font sans-serif:normal:size=10}Average:
${cpugraph}
CPU1: ${cpu cpu1}% ${cpubar cpu1}
CPU2: ${cpu cpu2}% ${cpubar cpu2}
CPU3: ${cpu cpu3}% ${cpubar cpu3}
CPU4: ${cpu cpu4}% ${cpubar cpu4}

${font sans-serif:bold:size=10}MEMORY ${hr 2}
${font sans-serif:normal:size=10}RAM $alignc $mem / $memmax $alignr $memperc%
$membar

${font sans-serif:bold:size=10}DISKS ${hr 2}
${font sans-serif:normal:size=10}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
${font sans-serif:normal:size=10}/vz $alignc ${fs_used /vz} / ${fs_size /vz} $alignr ${fs_used_perc /vz}%
${fs_bar /vz}
swap $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${font sans-serif:bold:size=10}TOP PROCESSES ${hr 2}
${font sans-serif:normal:size=10}${processes} processes

NAME ${alignr} PID       CPU      MEM
${top_mem name 1} ${alignr} ${top pid 1} ${top cpu 1} % ${top mem 1} %
${top_mem name 2} ${alignr} ${top pid 2} ${top cpu 2} % ${top mem 2} %
${top_mem name 3} ${alignr} ${top pid 3} ${top cpu 3} % ${top mem 3} %
${top_mem name 4} ${alignr} ${top pid 4} ${top cpu 4} % ${top mem 4} %
${top_mem name 5} ${alignr} ${top pid 5} ${top cpu 5} % ${top mem 5} %

${font sans-serif:bold:size=10}NETWORK ${hr 2}
${font sans-serif:normal:size=10}IP address: $alignr ${addr eth0}
Up: ${upspeed eth0} kb/s ${alignr} total: ${totalup br0}
${upspeedgraph eth0}
Down: ${downspeed eth0} kb/s ${alignr} total: ${totaldown eth0}
${downspeedgraph eth0}

