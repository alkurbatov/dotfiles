# Purprose:
# Completely disable adrt-related staff.

#!/bin/bash

systemctl disable abrt-ccpp.service abrtd.service abrt-oops.service abrt-vmcore.service
systemctl stop abrt-ccpp.service abrtd.service abrt-oops.service abrt-vmcore.service

