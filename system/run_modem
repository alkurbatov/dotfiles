# Purprose:
# Establish ADSL connection at the system startup.

#!/usr/bin/python

import os, time, sys

tries = 10
timeout = 10



os.system("modprobe br2684")

print "Configuring modem interface..."
while tries:
    time.sleep(timeout)

    if os.system("br2684ctl -b -c 0 -a 0.1.50") == 0:
        break

    tries -=1
else:
    print "Time up! Interface still down."
    sys.exit(1)

print "Establishing connection..."
os.system("pppoe-start")

print "Done!"
sys.exit(0)

