# Purprose:
# Attach gdb to target process.

#!/bin/bash

#Work directories.
ProcessName=[p]rl_disp_service
ProjectPath=/root/update1/Sources



echo "Searching for prl_disp_service..."
for value in `ps afx | grep $ProcessName`
do
  PID=`echo "  $value"` 
  break
done
if  [ $PID ];
then
  cd $ProjectPath
  gdb -silent -p $PID
else
  echo "Failed to found prl_disp_service!"
fi

