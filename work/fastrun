# Purprose:
# Attach gdb to target process.

#!/bin/bash

#Work directories.
PROCESS="[p]rl_disp_service"
WORKDIR="/home/builder/projects/pcs/1070504-update9/Sources"



echo "Searching for ${PROCESS}..."
PID=`ps afx | grep "${PROCESS}" | awk '{print $1}'`

if [ -z ${PID} ];
then
    echo "Failed to found ${PROCESS}!"
    exit 1
fi

cd ${WORKPATH}
gdb -silent -p ${PID}

