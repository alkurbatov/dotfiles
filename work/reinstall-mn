# Purprose:
# Completely reinstall Virtuozzo Automator Management Node
# and clean up all required folders.

yum groupremove -y 'VA Management Node' 'VA Control Center'
yum remove -y va-cc-storage va-cc-i18n-ru va-docs vzlicutils va-*-debuginfo

rm -rf /etc/opt/pva/cc
rm -rf /var/opt/pva
rm -rf /var/log/pva
rm -rf /opt/pva

yum clean all
yum groupinstall -y 'VA Management Node' 'VA Control Center'
yum install -y va-cc-storage va-cc-i18n-ru va-docs va-*-debuginfo

for i in va-mn va-cc; do
    systemctl start ${i}

    if [ ${PIPESTATUS[0]} != 0 ]; then
        echo "Failed to start ${i} service"
        exit 1
    fi
done

