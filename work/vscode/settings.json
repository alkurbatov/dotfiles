// Purprose:
// Tweak vscode

// Put this file to ~/.config/Code/User/ folder in order to apply tweaks.

{
	"editor.autoIndent": true,

	"editor.cursorStyle": "block",

	"editor.detectIndentation": true,

	"editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",

	"editor.fontSize": 14,

	"editor.formatOnPaste": false,

	"editor.formatOnSave": false,

	"editor.lineNumbers": "on",

	"editor.minimap.enabled": true,

	"editor.renderWhitespace": "all",

	"editor.wordWrap": "on",

	"explorer.sortOrder": "type",

	"files.autoSave": "afterDelay",

	"terminal.integrated.shell.osx": "/bin/zsh",

	// Disable statistics reporting.
	"telemetry.enableTelemetry": false,

	"telemetry.enableCrashReporter": false,

	"workbench.fontAliasing": "antialiased",

	"workbench.iconTheme": "vscode-great-icons",

	"window.zoomLevel": 0,

	//-------- Files configuration --------

	// Configure glob patterns for excluding files and folders.
	"files.exclude": {
		"**/CMakeFiles": true,
		"**/CMakeCache.txt": true,
		"**/cmake_install.cmake": true,
		"**/.git": true,
		"**/.DS_Store": true,
		"**/*.svn": true,
		"**/*.swp": true,
		"**/*.pyc": true,
		"**/*.pyo": true,
		"**/*.so": true,
		"**/coverage": true
	},

	//-------- Plugins configuration --------

	"vim.disableAnnoyingNeovimMessage": true,

	// Enable C++ linter
	"C_Cpp.intelliSenseEngine": "Default",

	// Hide Project Manager from the left panel
	"projectManager.treeview.visible": false,

	"projectManager.showProjectNameInStatusBar": false
}
